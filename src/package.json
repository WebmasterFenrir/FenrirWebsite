{
  "name": "repos",
  "private": true,
    "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start:feedback": "bun run --cwd apps/feedback-api start:feedback",
    "start:silent": "bun run --cwd apps/feedback-api start:silent"
  },

  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
